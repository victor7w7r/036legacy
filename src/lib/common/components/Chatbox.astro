<div class='container'>
  <div class='row'>
    <div class='chatbox chatbox22 chatbox--tray' id='chatbox'>
      <div class='chatbox__title' id='chatbox-title'>
        <h5><a href='# '>Chat</a></h5>
        <button class='chatbox__title__close' id='chatbox-title-close'>
          <span>
            <svg height='12px' viewBox='0 0 12 12' width='12px'>
              <line stroke='#FFFFFF' x1='11.75' x2='0.25' y1='0.25' y2='11.75'
              ></line>
              <line stroke='#FFFFFF' x1='11.75' x2='0.25' y1='11.75' y2='0.25'
              ></line>
            </svg>
          </span>
        </button>
      </div>
      <div class='chatbox__body' id='chat-content'></div>
      <form id='chatbox'>
        <div class='panel-footer'>
          <div class='input-group'>
            <input
              autocapitalize='off'
              autocomplete='off'
              class='form-control input-sm chat_set_height'
              contenteditable='true'
              dir='ltr'
              id='chat-nombre'
              placeholder='Nombre'
              spellcheck='false'
              tabindex={0}
              type='text'
            />
          </div>
          <div class='input-group'>
            <input
              autocapitalize='off'
              autocomplete='off'
              class='form-control input-sm chat_set_height'
              contenteditable='true'
              dir='ltr'
              id='chat-texto'
              placeholder='Mensaje'
              spellcheck='false'
              tabindex={0}
              type='text'
            />
            <button class='btn bt_bg btn-sm' id='chat-submit' type='submit'>
              Env√≠ar
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const chatbox = document.querySelector('#chatbox')
  const scrollTray = document.querySelector('#chat-content')

  document.querySelector<HTMLElement>('#chatbox-title-close')!.onclick = () =>
    chatbox!.classList.add('chatbox--closed')

  document.querySelector<HTMLElement>('#chatbox-title')!.onclick = () => {
    chatbox!.classList.toggle('chatbox--tray')
    scrollTray!.scrollTop = scrollTray!.scrollHeight - scrollTray!.clientHeight
  }
</script>
