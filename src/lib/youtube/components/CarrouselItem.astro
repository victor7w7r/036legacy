---
type Props = {
  body: string
  img: string
  url: string
}

const { body, img, url } = Astro.props
---

<div
  class='single-welcome-slide bg-img bg-overlay'
  style={`background-image: url(${img})`}
>
  <div class='container h-100'>
    <div class='row h-100 align-items-center'>
      <div class='col-12 col-lg-8 col-xl-6'>
        <div class='welcome-text'>
          <h2 data-animation='fadeInDown' data-delay='900ms'>
            <slot />
          </h2>
          <p data-animation='fadeInDown' data-delay='500ms'>
            {body}
          </p>
          <div
            class='portfolio-video-area wow'
            data-animation='fadeInDown'
            data-delay='500ms'
            data-wow-delay='500ms'
          >
            <div class='video-icon'>
              <a class='video-play-btn' href={url} rel='prefetch'>
                <i class='arrow_triangle-right'></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
