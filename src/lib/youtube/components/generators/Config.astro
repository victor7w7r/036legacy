---
import data from '@/youtube/data/youtube.json'
---

<section class='why-choose-us-area section-padding-80-0 clearfix'>
  <div class='container'>
    <div class='row'>
      {
        data.osu.config.url.map((url, index) => (
          // eslint-disable-next-line @typescript-eslint/no-unsafe-return
          <div
            class='col-sm-12 col-lg-4 single_gallery_item nature mb-30 wow fadeInUp'
            data-wow-delay='100ms'
          >
            <h6 class='wow fadeInUp' data-wow-delay='100ms'>
              <a href='url' rel='noopener noreferrer' target='_blank'>
                {data.osu.config.title[index]}
              </a>
            </h6>
            <br />
            <br />
            <div
              class='about-video-area mb-80 wow fadeInUp'
              data-wow-delay='100ms'
            >
              <img
                alt=''
                src={`/img/youtube/thumbs/${data.osu.config.thumb[index]}.jpg`}
              />
              <div class='video-icon'>
                <a class='video-play-btn' href={url}>
                  <i class='arrow_triangle-right' />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
