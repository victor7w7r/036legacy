---
import CoreLayout from '@/core/layout/CoreLayout.astro';
import Donate from '@/common/components/Donate.astro';
import Heading from '@/core/components/financial/Heading.astro';
---

<CoreLayout>
  <Heading
    img='/img/core/alter-l.jpg'
    title='Ganancias Adicionales'
    desc='Financial | Crypto | Alternativas'
  />
  <section class='our-team-area section-padding-crypto'>
    <div class='about-us-area section-padding-crypto clearfix'>
      <div class='container'>
        <div class='row align-items-center'>
          <div class='col-12 col-lg-20'>
            <div class='alert alert-info' role='alert'>
              <strong>¡Sé sabio!</strong> Estamos hablando de dinero, todo esto
              es bajo tu responsabilidad, sé paciente, perseverante, pon cabeza
              en esto y disfruta.
            </div>
